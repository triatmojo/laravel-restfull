{
    "openapi": "3.0.3",
    "info": {
        "title": "Users API",
        "description": "Users API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "api/users" : {
            "post" : {
                "description" : "Register new user",
                "requestBody" : {
                    "content" : {
                        "application/json" : {
                            "schema" : {
                                "type" : "object",
                                "required" : [
                                    "name", "username", "password"
                                ],
                                "properties" : {
                                    "username" : {
                                        "type" : "string"
                                    },
                                    "password" : {
                                        "type" : "string"
                                    },
                                    "name" : {
                                        "type" : "string"
                                    }
                                }
                            },
                            "example" : {
                                "tri" : {
                                    "description" : "Register user tri",
                                    "value" : {
                                        "username" : "tri",
                                        "password" : "secret",
                                        "name": "Tri Atmojo"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses" : {
                    "400" : {
                        "description" : "Validation error",
                        "content" : {
                            "application/json" : {
                                "examples" : {
                                    "validationerror" : {
                                        "description" : "Validation error",
                                        "value" : {
                                            "errors" : {
                                                "username" : [
                                                    "username must not be blank",
                                                    "username min 6 characters"
                                                ],
                                                "name" : [
                                                    "name must not be blank"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "201" : {
                        "description" : "Success register user",
                        "content" : {
                            "application/json" : {
                                "schema" : {
                                    "type" : "object",
                                    "properties" : {
                                        "data" : {
                                            "type" : "object",
                                            "properties" : {
                                                "id" : {
                                                    "type" : "number"
                                                },
                                                "name" : {
                                                    "type" : "string"
                                                },
                                                "username" : {
                                                    "type" : "string"
                                                }
                                            }
                                        },
                                        "errors" : {}
                                    }
                                },
                                "examples" : {
                                    "success" : {
                                        "description" : "Success register user",
                                        "value" : {
                                            "data" : {
                                                "id" : 1,
                                                "name" : "Tri Atmojo",
                                                "username" : "tri"
                                            }
                                        }

                                    }
                                }

                            }
                        }
                    },
                }
            }
        },
        "api/users/login" : {
            "post" : {
                "description" : "Login user",
                "requestBody" : {
                    "content" : {
                        "application/json" : {
                            "schema" : {
                                "type" : "object",
                                "properties" : {
                                    "username" : {
                                        "type" : "string"
                                    },
                                    "password" : {
                                        "type" : "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses" : {
                    "200" : {
                        "description" : "Success",
                        "content" : {
                            "application/json" : {
                                "schema" : {
                                    "type" : "object",
                                    "properties" : {
                                        "data" : {
                                            "type" : "object",
                                            "properties" : {
                                                "id" : {
                                                    "type" : "number"
                                                },
                                                "name" : {
                                                    "type" : "string"
                                                },
                                                "username" : {
                                                    "type" : "string"
                                                },
                                                "token" : {
                                                    "type" : "string"
                                                }
                                            }
                                        },
                                        "errors" : {}
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "api/users/current" : {
            "get" : {
                "description" : "Get current user"
            },
            "patch" : {
                "description" : "Update current user"
            }
        },
        "api/users/logout" : {
            "delete" : {
                "description" : "Logout current user"
            }
        }
    }
}
